{
    "name": "rindow/rindow-security-core",
    "type": "library",
    "description": "authentication and authorization security",
    "keywords": ["rindow","framework","authentication","authorization"],
    "license": "BSD-3-Clause",
    "require": {
        "php": ">=5.3.3",
        "interop-phpobjects/lenient-security": "*",
        "rindow/rindow-stdlib": "*"
    },
    "require-dev": {
        "interop-phpobjects/lenient-security": "*",
        "rindow/rindow-stdlib": "*",
        "rindow/rindow-container": "*",
        "rindow/rindow-annotation": "*",
        "rindow/rindow-transaction": "*",
        "rindow/rindow-database-dao": "*",
        "rindow/rindow-database-pdo": "*",
        "rindow/rindow-aop": "*",
        "rindow/rindow-transaction": "*"
    },
    "suggest": {
        "rindow/rindow-container": "It needs some service container",
        "rindow/rindow-aop": "When using insertion of access control",
        "rindow/rindow-annotation": "When using Annotation",
        "rindow/rindow-database-dao": "When using CrudRepositoryUserDetailsManager",
        "rindow/rindow-database-pdo": "When using SQL databases",
        "rindow/rindow-module-mongodb": "When using Mongodb etc.",
        "rindow/rindow-transaction": "When using transaction"
    },
    "autoload": {
        "psr-0": {
            "Rindow\\Security\\Core\\": "src/"
        }
    },

    "repositories": [
        {
            "type": "composer",
            "url": "https://rindow.github.io/rindow-packagist/packages.json",
            "options": {
                "ssl": {
                    "verify_peer": "true"
                }
            }
        }
    ],
    "minimum-stability": "dev"
}
